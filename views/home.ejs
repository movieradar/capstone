<!DOCTYPE html>
<html>
<header>
    <title>Category</title>
    <link rel="stylesheet" type="text/css" href="http://cdnjs.cloudflare.com/ajax/libs/narmalize/3.0.3/normalize.min.css">
    <script src="https://use.fontawesome.com/f3626566ff.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css">
	<script src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
  	<script src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
 	<script src="https://unpkg.com/babel-standalone@6.15.0/babel.min.js"></script>
</header>
<body>
	
    <header id ="top_header" class="clearfix">
		
        <div class="wrapper">
			<% if(typeof sess.login == 'undefined'){ %>
    		
				<h1> <%= sess.flashVisitor %></h1>
   			 <% } %>
            <img src="logoblack.png" alt="" class="logo" width="246" height="40">
            <nav id="main_nav">
                <a href="#">Home</a>
                <a href="#">Category</a>
			<% if(typeof sess.login == 'undefined'){ %>
                <a href="/signin">Sign in/out</a>
			<% } else { %>
				<a href="/logout">Sign in/out</a>
			<% } %>
            </nav>
        </div>
    </header>

	<section id="searchbar">
        <form action = '/searchresult' method = 'POST'>
            <input type="search" placeholder="  Find your favorite movie" name = 'searchkey'>
			<button class="button">Search</button>
        </form>
    </section>
    <section id="category" class="clearfix">
        <div class="wrapper">
            <header class="clearfix">
                <h2>ACTION</h2>
                <a href="#" class="view_more">View All Movies</a>
            </header>
			
			
            <div class="row">
				<% for(var i = 0; i < 7; i++){ %>
						<div class="post">
							<a href="/realdetail/<%=rows[i].movie_id %>"><img src="<%=rows[i].poster_path%>" alt="Posters"></a>
                		</div>
					<% } %>
            </div>
        </div>
    </section>

    <section id="category" class="clearfix">
        <div class="wrapper">
            <header class="clearfix">
                <h2>Comedy</h2>
                <a href="#" class="view_more">View All Movies</a>
            </header>

            <div class="row">
                <% for(var i = 7; i < 14; i++){ %>
						<div class="post">
							<a href="/realdetail/<%=rows[i].movie_id %>"><img src="<%=rows[i].poster_path%>" alt="Posters"></a>
                		</div>
					<% } %>
            </div>
        </div>
    </section>

    <section id="category" class="clearfix">
            <div class="wrapper">
                <header class="clearfix">
                    <h2>Drama</h2>
                    <a href="#" class="view_more">View All Movies</a>
                </header>
    
                <div class="row">
                    <% for(var i = 14; i < 21; i++){ %>
						<div class="post">
							<a href="/realdetail/<%=rows[i].movie_id %>"><img src="<%=rows[i].poster_path%>" alt="Posters"></a>
                		</div>
					<% } %>
                </div>
            </div>
        </section>

    <section id="newsletter">
        <div class="newsletter_inner">
            <h2>Get MovieRadar latest updates each week.</h2>
            <div class="sign_up_form">
                <input type="text" placeholder="First Name">
                <input type="text" placeholder="Email">
                <button class="button">Subscribe</button>
            </div>
        </div>

    </section>
    <footer id="main_footer">
        <p class="logo">MovieRadar</p>
        <p class="copyright">&copy;2019 MovieRadar. All Right Reserved.</p>
        <div class="links">
            <a href="#">Terms of Services</a>
            <a href="#">Privacy Policy</a>
        </div>

    </footer>
</body> 
</html>